<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="presenceapp.com.br.ufc.danielfilho.presenceapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.CreateAccountActivity" />
        <activity android:name=".activity.TeamDetailsActivity" />

        <receiver android:name="presence.PresenceReceiver">
            <intent-filter>
                <action android:name="danielfilho.ufc.br.com.predetect.OBSERVING_ENDS" />
            </intent-filter>
        </receiver>


        <receiver android:name="presence.StartObservingReceiver">
            <intent-filter>
                <action android:name="presenceapp.com.br.ufc.danielfilho.SERVICE_START_OBSERVING_ACTION" />
            </intent-filter>
        </receiver>

        <service
            android:name="services.SendPresenceService"
            android:enabled="true"></service>

        <activity android:name=".activity.PresenceDetailsActivity"></activity>
    </application>

</manifest>