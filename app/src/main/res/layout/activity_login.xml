<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="presenceapp.com.br.ufc.danielfilho.presenceapp.activity.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:id="@+id/et_username"
        android:hint="UsuÃ¡rio"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/et_username"
        android:layout_alignRight="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_marginTop="13dp"
        android:id="@+id/et_pass"
        android:hint="Senha" />

    <Button
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass"
        android:layout_marginTop="20dp"
        android:id="@+id/bt_enter"
        android:onClick="checkLogin"
        android:layout_alignRight="@+id/et_pass"
        android:layout_alignEnd="@+id/et_pass"
        android:layout_alignLeft="@+id/et_pass"
        android:layout_alignStart="@+id/et_pass"
        android:elevation="5dp" />

    <Button
        android:text="Criar Conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_enter"
        android:layout_alignLeft="@+id/bt_enter"
        android:layout_alignStart="@+id/bt_enter"
        android:id="@+id/bt_create_account"
        android:layout_alignRight="@+id/bt_enter"
        android:layout_alignEnd="@+id/bt_enter"
        android:elevation="0dp" />

    <CheckBox
        android:text="Continuar conectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_keepme_logged"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bt_create_account"
        android:layout_alignStart="@+id/bt_create_account"
        android:layout_marginBottom="21dp"
        android:layout_alignRight="@+id/bt_create_account"
        android:layout_alignEnd="@+id/bt_create_account" />
</RelativeLayout>
